@model IEnumerable<WedBlogs.Models.Role>

@{
    ViewData["Title"] = "QUẢN LÝ QUYỀN TRUY CẬP";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<p>
    <a class="btn btn-success" asp-action="Create"><i class="fa fa-plus"></i> Create</a>
</p>
<div class="breadcrumbs">
    <div class="col-sm-4">
        <div class="page-header float-left">
            <div class="page-title">
                <h1>Quản lý quyền truy cập</h1>
            </div>
        </div>
    </div>
    <div class="col-sm-8">
        <div class="page-header float-right">
            <div class="page-title">
                <ol class="breadcrumb text-right">
                    <li><a href="/Admin">Dashboard</a></li>
                    <li><a asp-area="Admin" asp-controller="Roles" asp-action="Index">QUẢN LÝ QUYỀN TRUY CẬP</a></li>

                </ol>
            </div>
        </div>
    </div>
</div>
<table class="table table-hover">
    <thead class=" thead-dark">
        <tr>
            <th>
                #
            </th>
            <th>
                Name
            </th>
            <th>
                Description
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Count() > 0)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.RoleId
                    </td>

                    <td>
                        @item.RoleName
                    </td>
                    <td>
                        @item.RoleDescription
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.RoleId" class="btn btn-success"><i class="fa fa-pencil"></i> Edit</a> 
                        <a asp-action="Details" asp-route-id="@item.RoleId" class="btn btn-primary"><i class="fa fa-eye"></i> Details</a> 
                        <a asp-action="Delete" asp-route-id="@item.RoleId" class="btn btn-danger"><i class="fa fa-times"></i> Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
