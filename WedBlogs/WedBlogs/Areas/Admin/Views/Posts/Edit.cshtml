@model Post

@{
    ViewData["Title"] = "CHỈNH SỬA TIN ĐĂNG";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="breadcrumbs">
    <div class="col-sm-4">
        <div class="page-header float-left">
            <div class="page-title">
                <h1>CHỈNH SỬA TIN ĐĂNG</h1>
            </div>
        </div>
    </div>
    <div class="col-sm-8">
        <div class="page-header float-right">
            <div class="page-title">
                <ol class="breadcrumb text-right">
                    <li><a href="/Admin">Dashboard</a></li>
                    <li><a asp-area="Admin" asp-controller="Posts" asp-action="Index">QUẢN LÝ DANH MỤC</a></li>
                    <li><a asp-area="Admin" asp-controller="Posts" asp-action="Edit">CHỈNH SỬA DANH MỤC</a></li>
                    <li><a>@Model.Title</a></li>
                </ol>
            </div>
        </div>
    </div>
</div>
<div class="card">
    <form asp-area="Admin" asp-action="Edit" asp-controller="Posts" asp-route-id="@Model.PostId" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="PostId" />
        <input type="hidden" asp-for="CreateDate" />
        <input type="hidden" asp-for="Author" />
        <input type="hidden" asp-for="AccountId" />
        <input type="hidden" asp-for="Thumb" />
        <div class="form-group col-sm-6">
            <label class="control-label">Tên:</label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="form-group col-sm-6">
            <label class="control-label">Danh Mục Cha:</label>
            <select class="form-control" asp-for="Cat.CatId" asp-items="@ViewBag.DanhMuc" required>
                <option label="DANH MỤC" selected></option>
            </select>
        </div>
        <div class="form-group col-sm-6">
            <label class="control-label">Miêu Tả Ngắn:</label>
            <input asp-for="Scontents" type="text" class="form-control" />
        </div>
        <div class="form-group col-sm-6">
            <label class="control-label"> Ảnh đại diện:</label>
            <input asp-for="Thumb" name="fThumb" type="file" class="form-control-file" />
        </div>
        <div class="form-group col-sm-6">
            <label class="control-label"> Mô Tả:</label>
            <input asp-for="Tag" type="text" class="form-control" />
            <span asp-validation-for="Tag" class="text-danger"></span>
        </div>
        <div class="form-group col-sm-6">
            <label class="control-label"> Tiêu đề:</label>
            <input asp-for="Title" type="text" class="form-control" />
        </div>
        <div class="form-group col-sm-6">
            <label class="control-label"> Tiêu đề:</label>
            <input asp-for="Contents" type="text" class="form-control" />
        </div>
        <div class="text-left col-sm-6">
            <button type="submit" class="btn btn-success btn-sm">
                <i class="fa fa-check"></i> Submit
            </button>
            <button type="reset" class="btn btn-secondary btn-sm">
                <a asp-action="Index"><i class="fa fa-backward"></i> Back to List</a>
            </button>
        </div>
    </form>
</div>

