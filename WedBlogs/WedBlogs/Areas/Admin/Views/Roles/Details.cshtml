@model WedBlogs.Models.Role

@{
    ViewData["Title"] = "XEM THÔNG TIN QUYỀN TRUY CẬP";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="breadcrumbs">
    <div class="col-sm-4">
        <div class="page-header float-left">
            <div class="page-title">
                <h1>XEM THÔNG TIN QUYỀN TRUY CẬP</h1>
            </div>
        </div>
    </div>
    <div class="col-sm-8">
        <div class="page-header float-right">
            <div class="page-title">
                <ol class="breadcrumb text-right">
                    <li><a href="/Admin">Dashboard</a></li>
                    <li><a asp-area="Admin" asp-controller="Roles" asp-action="Index">QUẢN LÝ QUYỀN TRUY CẬP</a></li>
                    <li><a asp-area="Admin" asp-controller="Roles" asp-action="Details">XEM THÔNG TIN QUYỀN TRUY CẬP</a></li>
                </ol>
            </div>
        </div>
    </div>
</div>
<div class="card">
    <div class="card-body card-block">
        <form action="" method="post" class="">
            <div class="form-group">
                <label class=" form-control-label">Role Name:</label>
                <input class="form-control" type="text" asp-for="RoleName" readonly>
            </div>
            <div class="form-group">
                <label for="nf-password" class=" form-control-label">Role Description:</label>
                <input type="text" class="form-control" asp-for="RoleDescription" readonly>
            </div>
        </form>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.RoleId" class="btn btn-primary"><i class="fa fa-pencil"></i> Chỉnh sửa</a> 
        <a asp-action="Index" class="btn btn-secondary"><i class="fa fa-backward"></i> Trở lại</a>
    </div>
</div>
