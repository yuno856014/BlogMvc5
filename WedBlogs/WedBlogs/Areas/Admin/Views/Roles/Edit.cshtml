@model WedBlogs.Models.Role

@{
    ViewData["Title"] = "CHỈNH SỬA QUYỀN TRUY CẬP";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="breadcrumbs">
    <div class="col-sm-4">
        <div class="page-header float-left">
            <div class="page-title">
                <h1>CHỈNH SỬA QUYỀN TRUY CẬP</h1>
            </div>
        </div>
    </div>
    <div class="col-sm-8">
        <div class="page-header float-right">
            <div class="page-title">
                <ol class="breadcrumb text-right">
                    <li><a href="/Admin">Dashboard</a></li>
                    <li><a asp-area="Admin" asp-controller="Roles" asp-action="Index">QUẢN LÝ QUYỀN TRUY CẬP</a></li>
                    <li><a asp-area="Admin" asp-controller="Roles" asp-action="Edit">CHỈNH SỬA QUYỀN TRUY CẬP</a></li>
                </ol>
            </div>
        </div>
    </div>
</div>
<hr />
<div class="card">
    <form asp-area="Admin" asp-controller="Roles" asp-action="Edit" asp-route-id="@Model.RoleId" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="RoleId" />
        <div class="card-body card-block row mg-b-25">
            <div class="form-group col-lg-6">
                <label class="pr-1  form-control-label">Role Name:</label>
                <input type="text" asp-for="RoleName" class="form-control">
            </div>
            <div class="form-group col-lg-6">
                <label class="px-1  form-control-label">Role Description:</label>
                <input type="text" asp-for="RoleDescription" class="form-control">
            </div>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-success btn-sm">
                <i class="fa fa-check"></i> Lưu thay đổi
            </button>
            <button type="reset" class="btn btn-secondary btn-sm">
                <a asp-action="Index"><i class="fa fa-backward"></i> Trở về</a>
            </button>
        </div>
    </form>
</div>


