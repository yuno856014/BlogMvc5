@model WedBlogs.Models.Role

@{
    ViewData["Title"] = "XÁC NHẬN XÓA QUYỀN TRUY CẬP";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="breadcrumbs">
    <div class="col-sm-4">
        <div class="page-header float-left">
            <div class="page-title">
                <h1>XÁC NHẬN XÓA QUYỀN TRUY CẬP</h1>
            </div>
        </div>
    </div>
    <div class="col-sm-8">
        <div class="page-header float-right">
            <div class="page-title">
                <ol class="breadcrumb text-right">
                    <li><a href="/Admin">Dashboard</a></li>
                    <li><a asp-area="Admin" asp-controller="Roles" asp-action="Index">QUẢN LÝ QUYỀN TRUY CẬP</a></li>
                    <li><a asp-area="Admin" asp-controller="Roles" asp-action="Delete">XÁC NHẬN XÓA QUYỀN TRUY CẬP</a></li>
                </ol>
            </div>
        </div>
    </div>
</div>
<div class="card">
    <div class="card-header">
        <strong>Bạn chắc chắn muốn xóa?</strong>
    </div>
    <div class="card-body card-block">
        <form action="" method="post" class="">
            <div class="form-group">
                <label class=" form-control-label">Role Name:</label>
                <input class="form-control" type="text" asp-for="RoleName">
            </div>
            <div class="form-group">
                <label for="nf-password" class=" form-control-label">Role Description:</label>
                <input type="text" class="form-control" asp-for="RoleDescription">
            </div>
        </form>
    </div>
    <form class="card-footer" asp-action="Delete">
        <input type="hidden" asp-for="RoleId" />
        <input type="submit" value="Xóa" class=" btn btn-danger" />
        <a asp-action="Index" class="btn btn-primary"><i class="fa fa-backward"></i> Trở lại</a>
    </form>
</div>
